<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10sp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#222831"
    app:cardBackgroundColor="#30475e"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/state_container">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="15sp"
            app:fontFamily="sans-serif-light"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center_horizontal"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:background="#ffffff"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="5sp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#172E45"
                app:cardElevation="0dp"
                android:layout_weight="1"
                android:layout_margin="5sp">
                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fitsSystemWindows="true">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/state_active_txt"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Cases"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#ffffff"
                        android:textSize="20sp"/>
                    <View
                        android:id="@+id/view_state_active"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#ffffff"
                        android:layout_marginRight="20sp"
                        android:layout_marginLeft="20sp"
                        android:layout_gravity="center_vertical"
                        android:layout_below="@id/state_active_txt"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sactive"
                        android:text="00000"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_below="@id/view_state_active"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5sp"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#172E45"
                app:cardElevation="0dp"
                android:layout_weight="1"
                android:layout_margin="5sp">
                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fitsSystemWindows="true">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/state_confirmed_txt"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmed Cases"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#ffffff"
                        android:textSize="20sp"/>
                    <View
                        android:id="@+id/view_state_confirmed"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#ffffff"
                        android:layout_marginRight="20sp"
                        android:layout_marginLeft="20sp"
                        android:layout_gravity="center_vertical"
                        android:layout_below="@id/state_confirmed_txt"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sconfirmed"
                        android:text="00000"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_below="@id/view_state_confirmed"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5sp"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#172E45"
                app:cardElevation="0dp"
                android:layout_weight="1"
                android:layout_margin="5sp">
                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fitsSystemWindows="true">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/state_deaths_txt"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deaths Cases"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#ffffff"
                        android:textSize="20sp"/>
                    <View
                        android:id="@+id/view_statedeaths"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#ffffff"
                        android:layout_marginRight="20sp"
                        android:layout_marginLeft="20sp"
                        android:layout_gravity="center_vertical"
                        android:layout_below="@id/state_deaths_txt"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sdeaths"
                        android:text="00000"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_below="@id/view_statedeaths"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5sp"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#172E45"
                app:cardElevation="0dp"
                android:layout_weight="1"
                android:layout_margin="5sp">
                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fitsSystemWindows="true">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/state_recovered_txt"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recovered Cases"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#ffffff"
                        android:textSize="20sp"/>
                    <View
                        android:id="@+id/view_staterecovered"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#ffffff"
                        android:layout_marginRight="20sp"
                        android:layout_marginLeft="20sp"
                        android:layout_gravity="center_vertical"
                        android:layout_below="@id/state_recovered_txt"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/srecovered"
                        android:text="00000"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_below="@id/view_staterecovered"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5sp"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </LinearLayout>






</com.google.android.material.card.MaterialCardView>